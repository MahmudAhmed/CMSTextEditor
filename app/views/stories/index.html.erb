<div class="index-container">

  <div class="section-title-container">
    <h4 class="section-title">Recent Stories</h4>
  </div>

  <div class="stories-container">
    <% @stories.each do |story| %>
      <a href="<%=story_url(story.id)%>">
        <div class="story-container" >
          <div class="tag-container">
            <h3 id="tag"><%= story.tag %></h3>
          </div>
          <div class="story-details">
            <div class="title-container">
              <h1 id="title"><%= story.title %></h1>
            </div>
            <div class="bottom-details-container">
              <div class="author-container">
                <h3 id="author"><%= story.author %></h3>
              </div>

              <div class="date-container">
                <p id="published"><%= story.created_at.strftime("%B %d, %Y") %></p>
              </div>
            </div>
          </div>
        </div>
      </a> 
    <% end %>
  </div>
</div>

