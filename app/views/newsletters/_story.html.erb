<div class="show-container show-container-partial">
  <table width="100%" cellpadding="0" cellspacing="0" border="0" style="border-collapse: collapse;">
    <tr>
      <td class="section section-partial body-copy">
        <table width="100%" cellpadding="0" cellspacing="0" border="0" style="border-collapse: collapse;">
          <tr>
            <td class="tag-outer">
              <table align="left" cellpadding="0" cellspacing="0" border="0"
                style="display: inline-block; border-collapse: collapse;">
                <tr>
                  <td class="tag-inner" style="color: #ffffff;"><%=story.tag%></td>
                </tr>
              </table>
            </td>
          </tr>
        </table>

        <h1>
          <font color="#000000"><%=story.title%></font>
        </h1>

        <%= story.body.html_safe %>
      </td>
    </tr>
  </table>
</div>









